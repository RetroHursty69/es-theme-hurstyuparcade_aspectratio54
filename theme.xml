<!--
theme name:     Hursty UP Arcade - 5:4 ratio for Arcade1Up monitor. Also this is arcade systems only, no consoles or handhelds etc
creator:		Dwayne Hurst (aka Hursty)
version         1.0
-->

<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
<carousel name="systemcarousel">
        <zIndex>43</zIndex>	      
        <type>vertical_wheel</type>
        <pos>-0.2 -1.0</pos>
        <size>1 3</size>
        <logoScale>1.03</logoScale>
        <logoSize>0.36 0.2</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>
        <logoRotation>-4</logoRotation>
		<logoRotationOrigin>-4.0 0.5</logoRotationOrigin>
		<logoAlignment>center</logoAlignment>        
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>                 
         <path>./_inc/images/main.png</path>
      </image>                    
      <text name="systemInfo">     
         <pos>0.263 0.008</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>000000</color>
         <fontPath>./_inc/fonts/gomarice_no_continue.ttf</fontPath>
	     <fontSize>0.03</fontSize>
         <zIndex>3</zIndex>	     
      </text>            
   </view>
</feature>


